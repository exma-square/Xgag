extends common/layout

block content
  .jumbotron.user-info(style="margin-top: 50px;")
    .container
      .mug-shot
        img.img-circle(src="data:image/svg+xml;base64,")
      br
      h3= user.name
      span My Funny Collection
  .user-menu
    .container
      ul.nav.nav-pills
        li
          a(href='#') OVERVIEW
        li
          a(href='#') POSTS
        li
          a(href='#') UPVOTES
        li
          a(href='#') COMMENTS

  .container
    .row
      .col-md-9
        .jumbotron
          h1= title
        each val, index in posts
          .post.jumbotron
            .post-header
              h3.item-title
                a.badge-evt.badge-track(href='')= val.title
            .post-body
              a.badge-evt.badge-track.badge-track-no-follow(href="#" style="min-height:360px;")
                img.badge-item-img(src= '#{val.image}')

      .col-md-3.sidebar
        include common/sidebar
